
/* --- 变量 --- */
.data-v-a24b82f2:root {
  --primary: #111111;
  --surface: #FFFFFF;
  --bg: #F5F7FA;
  --text-main: #1D1D1F;
  --text-sub: #8E8E93;
}

/* 核心布局修复：使用 Flex Column 撑满屏幕 */
.page.data-v-a24b82f2 {
  background-color: var(--bg);
  height: 100vh;
  width: 100%;
  display: flex;
  flex-direction: column;
  overflow: hidden; /* 防止页面整体滚动 */
}

/* 头部固定 */
.header-section.data-v-a24b82f2 {
  flex-shrink: 0;
  background-color: var(--bg);
  z-index: 10;
}
.nav-bar.data-v-a24b82f2 {
  height: 44px;
  padding: 0 16px;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.nav-btn.data-v-a24b82f2 {
  width: 32px; 
  height: 32px;
  border-radius: 50%;
  display: flex; 
  justify-content: center; 
  align-items: center;
  background: rgba(0,0,0,0.03);
}
.icon-img.data-v-a24b82f2 {
  width: 20px;
  height: 20px;
}
.page-title.data-v-a24b82f2 {
  font-size: 17px;
  font-weight: 600;
  color: var(--text-main);
}

/* 中间滚动区 - 关键修复 */
.scroll-content.data-v-a24b82f2 {
  flex: 1; /* 占据剩余所有高度 */
  height: 0; /* 必须设置，否则 flex 可能会失效 */
  width: 100%;
}
.content-wrapper.data-v-a24b82f2 {
  padding: 10px 20px 40px 20px; /* 底部加点 padding 防止贴底 */
}

/* 底部固定区 - 关键修复 */
.footer-section.data-v-a24b82f2 {
  flex-shrink: 0; /* 不允许被压缩 */
  background: var(--bg); /* 确保背景不透明 */
  padding: 10px 24px;
  /* 阴影效果向上投射 */
  box-shadow: 0 -4px 10px rgba(0,0,0,0.03);
  position: relative;
  z-index: 100;
}
.submit-btn.data-v-a24b82f2 {
  width: 100%; 
  height: 52px;
  background: var(--primary);
  border-radius: 26px;
  color: white;
  font-size: 16px;
  font-weight: 600;
  border: none;
  display: flex; 
  justify-content: center; 
  align-items: center;
}
.submit-btn.data-v-a24b82f2::after { border: none;
}
.submit-btn.data-v-a24b82f2:active { opacity: 0.8;
}
.submit-btn.disabled.data-v-a24b82f2 { background: #E5E5E5; color: #AAA;
}

/* --- 样式细节 --- */
.section-label.data-v-a24b82f2 {
  font-size: 14px;
  font-weight: 600;
  color: var(--text-main);
  margin-bottom: 12px;
  margin-top: 24px;
  margin-left: 4px;
}
.section-label.data-v-a24b82f2:first-child { margin-top: 0;
}
.type-group.data-v-a24b82f2 { display: flex; gap: 10px; margin-bottom: 10px;
}
.type-chip.data-v-a24b82f2 {
  flex: 1;
  height: 40px;
  background: var(--surface);
  border-radius: 12px;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 13px;
  font-weight: 500;
  color: var(--text-sub);
  border: 1px solid transparent;
}
.type-chip.active.data-v-a24b82f2 {
  background: var(--primary);
  color: white;
  box-shadow: 0 4px 10px rgba(0,0,0,0.15);
}
.input-card.data-v-a24b82f2 {
  background: var(--surface);
  border-radius: 16px;
  padding: 16px;
  position: relative;
  margin-bottom: 24px;
}
.feedback-textarea.data-v-a24b82f2 {
  width: 100%;
  min-height: 100px;
  font-size: 15px;
  color: var(--text-main);
}
.char-count.data-v-a24b82f2 {
  text-align: right;
  font-size: 12px;
  color: #C7C7CC;
  margin-top: 8px;
}
.media-grid.data-v-a24b82f2 { display: flex; flex-wrap: wrap; gap: 8px; margin-top: 12px;
}
.media-item.data-v-a24b82f2, .add-btn.data-v-a24b82f2 {
  width: calc((100% - 24px) / 4);
  aspect-ratio: 1;
  border-radius: 8px;
  overflow: hidden;
  background: #F2F4F7;
  position: relative;
}
.media-img.data-v-a24b82f2 { width: 100%; height: 100%;
}
.delete-btn.data-v-a24b82f2 {
  position: absolute; top: 0; right: 0;
  background: rgba(0,0,0,0.4);
  border-bottom-left-radius: 8px;
  width: 20px; height: 20px;
  display: flex; align-items: center; justify-content: center;
}
.add-btn.data-v-a24b82f2 { display: flex; justify-content: center; align-items: center;
}
.contact-input-box.data-v-a24b82f2 {
  background: var(--surface);
  border-radius: 14px;
  padding: 0 16px;
  height: 50px;
  display: flex;
  align-items: center;
}
.contact-input.data-v-a24b82f2 { flex: 1; font-size: 15px;
}
.input-placeholder.data-v-a24b82f2 { color: #C7C7CC;
}
